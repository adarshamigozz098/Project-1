      <section class="content-main">
        <div class="content-header">
          <div>
            <h2 class="content-title card-title">Categories</h2>
            <p>Add, edit or delete a category</p>
          </div>
          <div>
            <input
              type="text"
              placeholder="Search Categories"
              class="form-control bg-white"
            />
          </div>
        </div>
        <div class="card">
          <div class="card-body">
            <div class="row">
              <div class="col-md-3">
                <form method="post">
                  <div class="mb-4">
                    <label for="product_name" class="form-label">Name</label>
                    <input
                      name="productName"
                      type="text"
                      placeholder="Type here"
                      class="form-control"
                      id="product_name"
                    />
                  </div>
                  <div class="mb-4">
                    <label class="form-label">Description</label>
                    <input
                      type="text"
                      name="description"
                      placeholder="Type here"
                      class="form-control"
                      id="product_name"
                    />
                  </div>
                  <div class="d-grid">
                    <button type="submit" class="btn btn-primary btn-medium">
                      Create category
                    </button>
                  </div>
                </form>
              </div>
              <div class="col-md-9">
                <div class="table-responsive">
                  <table class="table table-hover">
                    <thead>
                      <tr>
                        <th>Name</th>
                        <th>Description</th>
                        <th>Status</th>
                        <th>List/Unlist</th>
                        <th>Edit</th>
                        <th>Action</th>
                      </tr>
                    </thead>
                    <tbody>
                      <%if(categoryData.length>0){%>
                      <%categoryData.forEach(data=>{%>
                      <tr>
                        <td><p id="data"><%=data.name%></p></td>
                        <td><%=data.description%></td>

                        <td>
                          <%if(data.is_listed){%>
                          <span class="badge bg-success">Listed</span>
                          <%}else{%>
                          <span class="badge bg-danger">Unlisted</span>
                          <%}%>
                        </td>
                        <td>
                          <%if(data.is_listed){%>
                          <button 
                          data-category-id="<%=data._id%>"
                          class="listBtn btn btn-danger btn-medium">Unlist</button>
                          <%}else{%>
                          <button
                            style="color: white"
                            class="listBtn btn btn-success btn-medium"
                            data-category-id="<%=data._id%>"
                          >
                            List
                          </button>
                          <%}%>
                        </td>
                        <td>
                          <!-- <button  class=" btn btn-primary btn-sm btn-medium">Edit</button> -->

                          <a href="/admin/edit?Data=<%= data._id%>" class=" btn btn-primary btn-sm btn-medium">Edit</a>
                        </td>
                        <td>
                          <button
                            class="deleteBtn btn btn-danger btn-sm"
                            data-category-id="<%=data._id%>"
                          >
                            delete
                          </button>
                        </td>
                      </tr>
                      <%})%> <%}else{%>
                      <td>No Category Found</td>
                      <%}%>
                    </tbody>
                  </table>
                </div>
              </div>
              <!-- .col// -->
            </div>
            <!-- .row // -->
          </div>
          <!-- card body .// -->
        </div>
        <!-- card .// -->
      </section>
