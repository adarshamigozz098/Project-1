    <script>
      const deleteButtons = document.querySelectorAll(".deleteBtn");

      deleteButtons.forEach((button) => {
        button.addEventListener("click", function () {
          const categoryId = this.dataset.categoryId;

          console.log(categoryId);

          axios
            .post(`/admin/category/deleteCategory?id=${categoryId}`)
            .then((response) => {
              if (response.data.success) {
                location.reload();
              }
            })
            .catch((error) => {
              console.error(error);
            });
        });
      });
    </script>
    <script>
        const ListOrUnlist = document.querySelectorAll(".listBtn")
        ListOrUnlist.forEach((button)=>{
          button.addEventListener("click",function(){
            const categoryId = this.dataset.categoryId

            console.log(categoryId);


            axios
            .post(`/admin/category/listOrUnlist?id=${categoryId}`)
          })
        })

    </script>
